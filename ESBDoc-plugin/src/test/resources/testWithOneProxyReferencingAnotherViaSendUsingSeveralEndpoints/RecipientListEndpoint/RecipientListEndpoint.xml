<?xml version="1.0" encoding="UTF-8"?>
<endpoint xmlns="http://ws.apache.org/ns/synapse" name="RecipientListEndpoint">
   <recipientlist>
      <endpoint name="RLEProxy2">
         <address uri="http://localhost:8280/services/Proxy2">
            <suspendOnFailure>
               <progressionFactor>1.0</progressionFactor>
            </suspendOnFailure>
            <markForSuspension>
               <retriesBeforeSuspension>0</retriesBeforeSuspension>
               <retryDelay>0</retryDelay>
            </markForSuspension>
         </address>
      </endpoint>
      <endpoint name="LBHttpProxy3">
         <http uri-template="http://localhost:8280/services/Proxy3" method="get">
            <suspendOnFailure>
               <progressionFactor>1.0</progressionFactor>
            </suspendOnFailure>
            <markForSuspension>
               <retriesBeforeSuspension>0</retriesBeforeSuspension>
               <retryDelay>0</retryDelay>
            </markForSuspension>
         </http>
      </endpoint>
   </recipientlist>
</endpoint>
           